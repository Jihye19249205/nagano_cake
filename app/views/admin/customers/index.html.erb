<h1>会員一覧</h1>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th colspan = "1"></th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <%= @customers.each do |customer| %>
    <tr>
      <td><%= @customers.id %></td>
      <td>
        <%= link_to admin_customer_path(@customer.id) do %>
          <%= @customers.last_name + @customers.first_name %>
        <% end %>
      </td>
      <td><%= @customers.email %></td>
      <td><%= @customers.is_deleted %></td>
    </tr>
  <% end %>
  </tbody>
</table>
