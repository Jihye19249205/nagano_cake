<h4><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
<table>
  <tr>
    <td>会員ID</td>
    <td>氏名</td>
    <td>フリガナ</td>
    <td>郵便番号</td>
    <td>住所</td>
    <td>電話番号</td>
    <td>メールアドレス</td>
    <td>会員ステータス</td>
  </tr>
</table>
<table>
  <thead>
    <tr>
      <th colspan = "1"></th>
      <th colspan = "2"></th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @customer.id %></td>
      <td><%= @customer.last_name + @customer.first_name %></td>
      <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
      <td><%= @customer.telephone_number %></td>
      <td><%= @customer.email %></td>
      <td><%= @customer.is_deleted %></td>
    </tr>
  </tbody>
</table>
