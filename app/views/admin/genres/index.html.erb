<%= flash[:notice] %>

<h3>ジャンル一覧・追加</h3>
<%= form_with model: genre, url: admin_genres_path do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <!--bootstrap button succes↓-->
  <%= f.submit '新規登録' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan = "1"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @genres.each do |genre| %>
      <td><%= @genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(@genre.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>

