<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_histories.each do |order_history %>
    <tr>
      <td><%= order_history.created_at %></td>
      <td><%= order_history.customer.name %></td>
      <td><%= order_history.order.amount %></td>
      <td><%= order_history.order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>


