<h1>商品一覧</h1>

<p><%= link_to "追加", new_admin_item_path %></p>
<!--bootstrapで整える↓-->
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <!--<th>ステータス</th>-->
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <td>
      <%= item.id %>
    </td>
    <td>
      <%= link_to admin_item_path(@item.id) do %>
        <%= item.name %>
      <% end %>
    </td>
    <td>
      <%= item.price %>
    </td>
    <td>
      ジャンル
      <%= item.genre %>
    </td>
    <!--<td>-->
    <!--  ステータス-->
    <!--</td>-->
    <% end %>
  </tbody>
</table>
