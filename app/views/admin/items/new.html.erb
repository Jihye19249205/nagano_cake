<h1>商品新規登録</h1>

<!--editとnewページで共通テンプレートを使用する↓-->
<%= form_with model: @item, url: admin_item_path do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.select :genre, [["ケーキ", "ケーキ"]] %>
  <h4>税抜価格</h4>
  <h4><%= @item.price %>円</h4>
  <!--<h4>販売ステータス</h4>-->
  <!--販売中、販売停止中でチェックできるやつ実装↓-->
  <!--f.radio_button :status, "販売中"-->
  <!--f.radio_button :status, "販売停止中"-->

  <!--bootstrap button success-->
  <%= f.submit '新規登録' %>
<!--editとnewページで共通テンプレートを使用する↑-->
<% end %>