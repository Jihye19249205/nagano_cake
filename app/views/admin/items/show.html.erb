<div class = "container">
  <h2>商品詳細</h2>
  <div class = "row">
    <div class "col-md-3">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "330x250" %>
      <% else %>
        <%= image_tag 'no_image', size: "330x250" %>
      <% end %>
    </div>
    <table>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>
          税込価格</br>
        （税抜価格）
        </td>
        <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></td>
      </tr>
    </table>
  </div>
</div>
