<h3>配送先編集</h3>

<%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
    <div class = "field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
    </div>
    <div class = "field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
    </div>
    <div class = "field">
    <%= f.label "宛名" %>
    <%= f.text_field :name %>
    </div>
    <!--bootstrap buttom "succress"↓-->
    <%= f.submit "変更内容を保存" %>
<% end %>
