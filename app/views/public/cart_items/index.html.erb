<h3>ショッピングカート</h3>

<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data_confirm => "カートを空にしますか？" %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価</th>
      <th>数量</th>
      <th colspan = "4"></th>
      <th>小計</th>
      <th colspan = "6"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.image %></td><td><%= cart_item.name %></td>
      <td><%= cart_item.unit_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.price %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, data_confirm => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
