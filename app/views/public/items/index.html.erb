<h2>商品一覧(全<%= @items.count %>件)</h2>

<!--ジャンル検索機能は共通テンプレ-->
<table>
  <thead>
    <tr>
      <th><strong>ジャンル検索</strong></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    </tr>
  </tbody>
</table>

<div class = "container">
  <% @items.each do |item| %>
  <div><%= image_tag item.image, size: "100 x 120 " %></div>
  <div><%= item.name %></div>
  <div><%= item.price %></div>
  <% end %>
