<h2>商品一覧(全<%= @items.count %>件)</h2>

<!--ジャンル検索機能は共通テンプレ-->
<table>
  <thead>
    <tr>
      <th><strong>ジャンル検索</strong></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    </tr>
  </tbody>
</table>

<div class = "container">
  <% @items.each do |item| %>
  <div>
    <%= link_to item_path(item.id) do %>
      <% if item.image.attached? %>
        <%= image_tag item.image, size: "80x100 " %>
      <% else %>
        <%= image_tag 'no_image', size: "80x100" %>
      <% end %>
    <% end %>
    </div>
  <div><%= item.name %></div>
  <div><%= item.price %></div>
  <% end %>
