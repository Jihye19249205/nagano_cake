<div>
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "330x250" %>
  <% else %>
    <%= image_tag 'no_image', size: "330x250" %>
  <% end %>
</div>
<div>
  <h3><%= @item.name %></h3>
</div>
<div>
  <p><%= @item.introduction %></p>
</div>
<div>
  <h4><%= @item.add_tax_price.to_s(:delimited) %>円</h4>
  <p>(税込)</p>
</div>
<%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..10] %>
  <%= f.submit "カートに入れる" %>
<% end %>



