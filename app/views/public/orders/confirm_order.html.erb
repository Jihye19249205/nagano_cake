<div class = "container">
  <h2>注文情報確認</h2>
  <div class = "row" >
    <table>
      <thead>
        <tr>
          <th colspan = "1"></th>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td></td>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <table>
        <tr><th>送料</th><td><%= @order.shipping_fee %></td></tr>
        <tr><th>商品合計</th><td><%= @item_total.round.to_s(:delimited) %></td></tr>
        <tr><th>請求金額</th><td><%= @total_payment %></td></tr>
    </table>
  </div>
  <div>
    <h3>お支払い方法</h3>
    <p><%= @order.payment_way_i18n %></p>
  </div>
  <div>
    <h3>お届け先</h3>
    <p><%= @order.postal_code %></p>
    <p><%= @order.address %></p>
    <p><%= @order.name %></p>
  </div>
  <div class = "container">
  <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :total_payment, value: @total_payment %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :payment_way, value: @order.payment_way %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  <% end %>
  </div>
</div>