<div class = "container">
  <h2>注文履歴詳細</h2>
  <div class = "row">
    <div class = "col-xs-8">
      <h3>注文情報</h3>
      <table class = "table table-hover table-inverse">
        <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr><th>支払方法</th><td><%= @order.payment_way_i18n %></td></tr>
      </table>
    </div>
    <div class="col-xs-4">
    <h3>請求情報</h3>
      <table class = "table table-hover table-inverse">
        <tr><th>商品合計</th><td><%= @order.total_payment - @order.shipping_fee %>円</td></tr>
        <tr><th>配送料</th><td><%= @order.shipping_fee %>円</td></tr>
        <tr><th>ご請求額</th><td><%= @order.total_payment %>円</td></tr>
      </table>
    </div>
      <div class = "container">
        <h3>注文内容</h3>
        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.add_tax_price %>円</td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.unit_price * order_detail.amount %>円</td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>