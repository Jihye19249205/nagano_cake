<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class = "field">
    <%= f.label "（姓）" %>
    <%= f.text_field :last_name %>
  </div>

  <div class = "field">
    <%= f.label "（名）" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class = "field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class = "field">
    <%= f.label "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class = "field">
    <%= f.label "電話番号(ハイフンなし)" %>
    <%= f.telephone_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label "パスワード（6文字以上）" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<!--「こちら」にログインページへのリンク設定↓-->
<p>
  <%= render "public/shared/links" %>からログインしてください
</p>


